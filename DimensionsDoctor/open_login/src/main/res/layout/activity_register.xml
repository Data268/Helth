<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegisterActivity">

    //完善信息

    <LinearLayout
        android:id="@+id/wansinfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_34"
            android:layout_marginRight="@dimen/dp_14"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完善信息"
                android:textColor="#3087ea"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="审核通过即可成功入驻"
                android:textColor="#3087ea"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_18"
                android:text="您的邮箱账号"
                android:textColor="#666666"
                android:textSize="@dimen/sp_14" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/reg_mailcode"
                    android:layout_width="@dimen/dp_300"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_8"
                    android:background="@drawable/code_bg" />

                <Button
                    android:id="@+id/bt_yz"
                    android:layout_width="@dimen/dp_104"
                    android:layout_height="@dimen/dp_40"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_8"
                    android:background="@drawable/bt_b"
                    android:text="获取验证码"
                    android:textColor="#fff"
                    android:textSize="@dimen/sp_12" />


            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:text="请输入验证码"
                android:textColor="#666666"
                android:textSize="@dimen/sp_14" />

            <EditText
                android:id="@+id/reg_getyz"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@drawable/code_bg" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:text="请输入密码" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/code_bg">

                <EditText
                    android:id="@+id/reg_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_toRightOf="@+id/log_lock"
                    android:background="@android:color/transparent"
                    android:inputType="textPassword"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:id="@+id/reg_eye"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_14"
                    android:layout_marginRight="@dimen/dp_8"
                    android:src="@drawable/login_icon_hide_password_n" />


            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:text="请再次输入密码" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@drawable/code_bg">

                <EditText
                    android:id="@+id/areg_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_toRightOf="@+id/log_lock"
                    android:background="@android:color/transparent"
                    android:inputType="textPassword"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:id="@+id/areg_eye"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_14"
                    android:layout_marginRight="@dimen/dp_8"
                    android:src="@drawable/login_icon_show_password" />


            </RelativeLayout>

            <Button
                android:id="@+id/next_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_40"
                android:background="@drawable/btn_bg"
                android:text="下一步"
                android:textColor="#fff"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

    </LinearLayout>


    //个人信息

    <LinearLayout
        android:id="@+id/getinfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_34"
            android:layout_marginRight="@dimen/dp_14"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完善信息"
                android:textColor="#3087ea"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="审核通过即可成功入驻"
                android:textColor="#3087ea"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="*填写正确信息有助于快速通过审核"
                android:textColor="#d92109"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_18"
                android:text="真实姓名"
                android:textColor="#666666"
                android:textSize="@dimen/sp_14" />

            <EditText
                android:id="@+id/reg_realname"
                android:layout_width="@dimen/dp_300"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@drawable/code_bg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:text="您所在医院"
                android:textColor="#666666"
                android:textSize="@dimen/sp_14" />

            <EditText
                android:id="@+id/reg_hospital"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@drawable/code_bg" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:text="您所在科室" />

            <Spinner
                android:id="@+id/reg_choose_keshi"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_8"></Spinner>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:text="您的职称" />

            <Spinner
                android:id="@+id/reg_choose_zhichen"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_8"></Spinner>


            <Button
                android:id="@+id/next_page_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/btn_bg"
                android:text="下一步"
                android:textColor="#fff"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

    </LinearLayout>


    //个人简介

    <LinearLayout
        android:id="@+id/gerjianjie"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_14"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/ren_back"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/common_icon_back_black_n" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="您的个人简介" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_130"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/edit_bg">

                    <EditText
                        android:id="@+id/reg_et_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:background="@android:color/transparent"
                        android:maxLength="500"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_11"
                        android:text="500字以上"
                        android:textColor="#3870ea"
                        android:textSize="@dimen/sp_10" />
                </RelativeLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="您的擅长领域" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_130"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/edit_bg">

                    <EditText
                        android:id="@+id/reg_et_can"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:background="@android:color/transparent"
                        android:maxLength="300"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_11"
                        android:text="300字以上"
                        android:textColor="#3870ea"
                        android:textSize="@dimen/sp_10" />
                </RelativeLayout>

                <Button
                    android:id="@+id/reg_tenter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_45"
                    android:background="@drawable/btn_bg"
                    android:text="申请入驻"
                    android:textColor="#fff"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    //等待验证

    <LinearLayout
        android:id="@+id/dengdchengg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/registration_result_bg"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_14"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_65"
                android:text="感谢您入驻维度健康"
                android:textColor="#fff"
                android:textSize="@dimen/sp_24" />

            <Button
                android:id="@+id/bt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/path2"
                android:text="审核结果将于24h后发送至您邮箱"
                android:textColor="#3087ea"
                android:textSize="@dimen/sp_18" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin"
            android:layout_marginTop="@dimen/dp_18">

            <Button
                android:id="@+id/reg_back_log"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_8"
                android:background="@drawable/back_bg"
                android:text="返回"
                android:textColor="#789cec"
                android:textSize="@dimen/dp_22" />

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>