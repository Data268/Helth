<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#3087ea"
    android:layout_height="match_parent"
    tools:context=".activity.ResetActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frist"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

        <ImageView
            android:id="@+id/reset_back"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_14"
            android:background="@drawable/common_icon_back_white_n"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码"
            android:textColor="#fff"
            android:textSize="@dimen/sp_16"
            />

    </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_150"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_120"
            android:background="@drawable/path2"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20">
                <EditText
                    android:id="@+id/reset_email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:hint="请输入邮箱账号"
                    android:textSize="@dimen/sp_16"
                    android:background="@android:color/transparent"
                    />
                <Button
                    android:layout_width="@dimen/dp_84"
                    android:background="@drawable/bt_b"
                    android:layout_height="@dimen/dp_30"
                    android:layout_alignParentRight="true"
                    android:textColor="#fff"
                    android:textSize="@dimen/sp_12"
                    android:text="获取验证码"
                    android:layout_marginTop="@dimen/dp_8"
                    android:id="@+id/reset_yz"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="#999999"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_below="@+id/reset_yz"
                    />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20">
                <EditText
                    android:id="@+id/reset_code"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:hint="请输入验证码"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:textSize="@dimen/sp_16"
                    android:background="@android:color/transparent"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="#999999"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_below="@+id/reset_code"
                    />

            </RelativeLayout>



        </LinearLayout>



        <Button
            android:id="@+id/re_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="下一步"
            android:background="#ffff"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_70"
            android:textColor="#3078ea"
            android:textSize="@dimen/sp_16"
            />

        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/two"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/reset2_back"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:background="@drawable/common_icon_back_white_n"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设置新密码"
                        android:textColor="#fff"
                        android:textSize="@dimen/sp_16"
                        />

                </LinearLayout>
            </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_150"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_120"
                android:background="@drawable/path2"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_28"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20">

                    <EditText
                        android:id="@+id/reset_new_pwd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/log_lock"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:inputType="textPassword"
                        android:hint="请设置新密码"
                        android:textSize="@dimen/sp_14"
                        android:background="@android:color/transparent"
                        />
                    <ImageView
                        android:id="@+id/reset_eye"
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:background="@drawable/login_icon_hide_password_n"
                        android:layout_alignParentRight="true"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="#999999"
                        android:layout_below="@+id/reset_eye"
                        android:layout_marginTop="@dimen/dp_8"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_18"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20">

                    <EditText
                        android:id="@+id/reset_sure_pwd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/log_lock"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:inputType="textPassword"
                        android:hint="请设置新密码"
                        android:textSize="@dimen/sp_14"
                        android:background="@android:color/transparent"
                        />
                    <ImageView
                        android:id="@+id/reset2_eye"
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:background="@drawable/login_icon_hide_password_n"
                        android:layout_alignParentRight="true"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="#999999"
                        android:layout_below="@+id/reset2_eye"
                        android:layout_marginTop="@dimen/dp_8"
                        />
                </RelativeLayout>


            </LinearLayout>

            <Button
                android:id="@+id/re_success"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="完成"
                android:background="#ffff"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_70"
                android:textColor="#3078ea"
                android:textSize="@dimen/sp_16"
                />

        </LinearLayout>

        </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>