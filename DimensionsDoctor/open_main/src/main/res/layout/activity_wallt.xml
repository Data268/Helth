<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.WalltActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_14"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="horizontal"
        >
        <ImageButton
            android:id="@+id/back_q"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:background="@drawable/common_icon_back_black_n"
            />

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="我的钱包"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/bind_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看绑定"
            />

    </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/my_wallet_bg"
            >
            <TextView
                android:id="@+id/my"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_20"
                android:textSize="@dimen/sp_18"
                android:textColor="#ffffff"
                android:text="我的H币"
                />
            <TextView
                android:id="@+id/money_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="29999"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_48"
                android:layout_below="@+id/my"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_40"
                />
            <TextView
                android:id="@+id/man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/money_count"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="满20000可提现"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_10"
                android:layout_marginBottom="@dimen/dp_40"
                />
            <Button
                android:id="@+id/tixian"
                android:background="@drawable/system_bg"
                android:layout_width="@dimen/dp_58"
                android:layout_height="@dimen/dp_29"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_140"
                android:layout_marginRight="@dimen/dp_20"
                android:text="提现"
                android:textColor="#3087ea"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/dp_20"
                />


        </RelativeLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_height="match_parent"
            android:id="@+id/rece_Withdraw"
            ></androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

</LinearLayout>