<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        >
        <TextView
            android:id="@+id/data_y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08-28"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16"
            />
        <TextView
            android:id="@+id/data_n"
            android:layout_below="@+id/data_y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019"
            />

        <ImageButton
            android:id="@+id/dian"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:background="@drawable/wallet_icon"
            android:layout_toRightOf="@+id/data_y"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_5"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/dian"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20元"
                    android:textSize="@dimen/sp_18"
                    android:textColor="#d92109"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#3087ea"
                    android:text="已提现"
                    android:layout_marginTop="@dimen/dp_8"
                    />
            </LinearLayout>
            <RelativeLayout
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="到账银行卡"
                    android:layout_alignParentRight="true"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_12"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="民生银行"
                        android:layout_marginTop="@dimen/dp_8"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_12"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="尾号"
                        android:layout_marginLeft="@dimen/dp_9"
                        android:layout_marginTop="@dimen/dp_8"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_12"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_9"
                        android:text="2684"
                        android:layout_marginTop="@dimen/dp_8"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_12"
                        />

                </LinearLayout>


            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>
