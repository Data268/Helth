<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.HistroyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_40"
        android:orientation="horizontal"
        >
        <ImageButton
            android:id="@+id/back_hi"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:background="@drawable/common_icon_back_black_n"
            />

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#333333"
            android:textSize="@dimen/sp_20"
            android:text="历史问诊"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/get_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收到的礼物"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/histroy_lin1"
        android:visibility="gone"
        android:orientation="vertical"
        android:gravity="center"
        >
        <ImageButton
            android:layout_width="@dimen/dp_126"
            android:layout_height="@dimen/dp_135"
            android:background="@drawable/none_bg"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="咦~ 暂无消息"
            />

    </LinearLayout>

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recehistory"
        ></com.jcodecraeer.xrecyclerview.XRecyclerView>



</LinearLayout>