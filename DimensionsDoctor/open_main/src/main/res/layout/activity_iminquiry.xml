<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/dp_14"
    android:layout_marginRight="@dimen/dp_14"
    android:layout_height="match_parent"
    tools:context=".activity.wode.IMInquiryActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/yes"
        >

    <RelativeLayout
        android:id="@+id/lew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        >
        <ImageButton
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:background="@drawable/common_icon_back_black_n"
            android:id="@+id/back_im"
            />

        <TextView
            android:id="@+id/name_im"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name_im"
            android:layout_toRightOf="@+id/back_im"
            android:layout_marginLeft="@dimen/dp_99"
            />

    </RelativeLayout>

    <View
        android:id="@+id/vivi"
        android:layout_below="@+id/lew"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_4"
        android:background="#dddd"
        />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rece_im"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/vivi"
            >



        </androidx.recyclerview.widget.RecyclerView>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_alignParentBottom="true"
            android:background="#dddddd">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                >
                <ImageButton
                    android:background="@drawable/common_icon_voice_n"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:id="@+id/voice_im"
                    />

                <EditText
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/tit_bbg"
                    />
                <ImageButton
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:id="@+id/smaile_im"
                    android:background="@drawable/common_icon_expression_n"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    />

                <ImageView
                    android:id="@+id/picture_im"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:background="@drawable/common_icon_picture_n"
                    />

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>